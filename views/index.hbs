<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AniCritique Admin Side</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="css/adminview.css">
</head>
<body>

    <!-- Header -->
        <header id="header">
            <nav>
                <div class="container">
                    <div class="text-center">
                        <a href="/admin" class="nav-brand text-light">AniCritique Admin Side</a>
                    </div>
                </div>
            </nav>
        </header>
    <!-- /Header -->
<!-- /include header -->

    <!-- Main Site -->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex-justify-between">
                <a href="/add-anime" class="border-shadow">
                    <span class="text-gradient">New Anime <i class="fa-solid fa-plus"></i> </span>
                </a>
            </div>

            <!-- form handling -->
            <form action="/" method="POST">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>jp_title</th>
                            <th>en_title</th>
                            <th>synopsis</th>
                            <th>studio</th>
                            <th>type</th>
                            <th>genre</th>
                            <th>premiere</th>
                            <th>episode_count</th>
                            <th>rating</th>
                            <th>ave_score</th>
                            <th>image</th>
                            <th>summ</th>
                            <th>Update</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                            {{#if anime.length}}
                            {{#each anime}}

                            <tr>
                                <td>{{ @index }}</td>
                                <td>{{ this.jp_title }}</td>
                                <td>{{ this.en_title }}</td>
                                <td>{{ this.synopsis }}</td>
                                <td>{{ this.studio }}</td>
                                <td>{{ this.type }}</td>
                                <td>{{ this.genre }}</td>
                                <td>{{ this.premiere }}</td>
                                <td>{{ this.episode_count }}</td>
                                <td>{{ this.rating }}</td>
                                <td>{{ this.ave_score }}</td>
                                <td>{{ this.image }}</td>
                                <td>{{ this.summ }}</td>
                                <td>
                                    <a href="/update-anime/{{ this._id }}" class="btn border-shadow update">
                                        <span class="text-gradient"><i class="fas fa-pencil-alt"></i></span>
                                    </a>
                                </td>
                                <td>
                                    <a href="/del/{{ this._id }}" class="btn border-shadow delete">
                                        <span class="text-gradient"><i class="fas fa-times"></i></span>
                                    </a>
                                </td>
                            </tr>
                            
                            {{/each}}
                            {{/if}}
                    </tbody>
                </table>
            </form>

            <div class="form-group">
                <a href="/add-logout" class="border-shadow">
                    <button type="submit" class="btn text-light update">Logout</button>
                </a>
            </div>

        </div>
    </main>
<!-- /Main Site -->



<!-- include footer -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src="/js/stuff.js"></script>

</body>
</html>
<!-- /include footer -->