<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AniCritique Admin Side</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/css/adminview.css">
</head>
<body>

    <!-- Header -->
        <header id="header">
            <nav>
                <div class="container">
                    <div class="text-center">
                        <a href="/" class="nav-brand text-light">AniCritique Admin Side</a>
                    </div>
                </div>
            </nav>
        </header>
    <!-- /Header -->
<!-- /include header -->

    <!-- Main Site -->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex-justify-between">
                <div class="filter">
                    <a href="/admin"><i class="fas fa-angle-double-left"></i>All Anime</a>
                </div>
            </div>
            <div class="form-title text-center">
                <h2 class="text-dark">Update Anime</h2>
                <span class="text-light">Use the form below to update an anime record.</span>
            </div>

            <!-- update anime form -->
            <form method="POST" id="update_anime" action="/edit/{{ anime._id }}">
                <div class="new_anime">
                    <div class="form-group">
                        <label for="jp_title" class="text-light">jp_title</label>
                        <input type="hidden" name="id" value="{{ anime._id }}">
                        <input type="text" name="jp_title" value="{{ anime.jp_title }}" placeholder="{{ anime.jp_title }}">
                    </div>
                    <div class="form-group">
                        <label for="en_title" class="text-light">en_title</label>
                        <input type="text" name="en_title" value="{{ anime.en_title }}" placeholder="{{ anime.en_title }}">
                    </div>
                    <div class="form-group">
                        <label for="synopsis" class="text-light">synopsis</label>
                        <textarea name="synopsis" value="{{ anime.synopsis }}" placeholder="">{{ anime.synopsis }}</textarea>
                    </div>
                    <div class="form-group">
                        <label for="studio" class="text-light">studio</label>
                        <input type="text" name="studio" value="{{ anime.studio }}" placeholder="{{ anime.studio }}">
                    </div>
                    <div class="form-group">
                        <label for="type" class="text-light">type</label>
                        <input type="text" name="type" value="{{ anime.type }}" placeholder="{{ anime.type }}">
                    </div>
                    <div class="form-group">
                        <label for="genre" class="text-light">genre</label>
                        <input type="text" name="genre" value="{{ anime.genre }}" placeholder="{{ anime.genre }}">
                    </div>
                    <div class="form-group">
                        <label for="premiere" class="text-light">premiere</label>
                        <input type="text" name="premiere" value="{{ anime.premiere }}" placeholder="{{ anime.premiere }}">
                    </div>
                    <div class="form-group">
                        <label for="episode_count" class="text-light">episode_count</label>
                        <input type="text" name="episode_count" value="{{ anime.episode_count }}" placeholder="{{ anime.episode_count }}">
                    </div>
                    <div class="form-group">
                        <label for="rating" class="text-light">rating</label>
                        <input type="text" name="rating" value="{{ anime.rating }}" placeholder="{{ anime.rating }}">
                    </div>
                    <div class="form-group">
                        <label for="image" class="text-light">image</label>
                        <input type="text" name="image" value="{{ anime.image }}" placeholder="{{ anime.image }}">
                    </div>
                    <div class="form-group">
                        <label for="summ" class="text-light">summ</label>
                        <input type="text" name="summ" value="{{ anime.summ }}" placeholder="{{ anime.summ }}">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn text-light update">Save</button>
                    </div>
                </div>
            </form>
            
        </div>
    </main>
<!-- /Main Site -->

<!-- include footer -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src="/js/stuff.js"></script>

</body>
</html>
<!-- /include footer -->